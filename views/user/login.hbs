<div class="flex justify-center items-center">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-md w-full">
    <div class="bg-gradient-to-r from-primary-600 to-primary-800 p-6 text-center">
      <h1 class="text-2xl font-bold text-white">Prijava</h1>
    </div>
    
    <div class="p-8">
      <form action="login" method="post" class="space-y-6">
        <div>
          <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Uporabniško ime</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <input type="text" id="username" name="username" placeholder="Uporabniško ime" required class="w-full pl-10 pr-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-300 focus:border-primary-300 transition">
          </div>
        </div>
        
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Geslo</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <input type="password" id="password" name="password" placeholder="Geslo" required class="w-full pl-10 pr-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-300 focus:border-primary-300 transition">
          </div>
        </div>
        
        <div class="tp">
          <button type="submit" class="w-full bg-secondary-500 hover:bg-secondary-600 text-white font-medium py-3 px-4 rounded-md transition">
            Login
          </button>
        </div>
        
        <div class="text-center mt-6">
          <p class="text-gray-600">Nimate računa? <a href="/users/register" class="text-primary-600 hover:text-primary-500 font-medium">Registrirajte se</a></p>
        </div>
      </form>
    </div>
  </div>
</div>