<div class="min-h-screen bg-gray-100 flex items-center justify-center px-4">
  <div class="bg-white shadow-xl rounded-lg p-8 text-center space-y-4">
    
    <div class="text-red-500">
      <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9 9 4.03 9 9z" />
      </svg>
    </div>

    <h1 class="text-3xl font-bold text-gray-800">{{error2}}</h1>
    <h2 class="text-xl text-gray-600">Error {{error.status}}</h2>

    {{#if error.stack}}
    <details class="text-left bg-gray-50 rounded-md p-4 border border-gray-200 mt-4">
      <summary class="cursor-pointer font-semibold text-sm text-gray-700 mb-2">Stack Trace</summary>
      <pre class="text-xs text-gray-500 whitespace-pre-wrap">{{error.stack}}</pre>
    </details>
    {{/if}}

    <a href="/" class="inline-block mt-4 bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-md transition">Go Home</a>
  </div>
</div>