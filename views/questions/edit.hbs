<div class="max-w-lg mx-auto bg-white rounded-2xl shadow p-8">
  <h1 class="text-3xl font-bold mb-6">Edit Question</h1>
  <form action="/questions/{{question._id}}?_method=PUT" method="POST" class="space-y-4">
    <input type="text" name="title" value="{{question.title}}" required
      class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-200">
    <textarea name="content" rows="5" required
      class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-200">{{question.content}}</textarea>
    <button type="submit"
      class="w-full mt-4 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition">Update</button>
  </form>
</div>
