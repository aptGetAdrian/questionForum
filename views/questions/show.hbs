<img src="{{questionAuthorProfilePicture}}" alt="Profile Picture" width="50">
<h1>{{question.title}}</h1>
<p>{{{question.content}}}</p>

<p>isOwner: {{isOwner}}</p>

{{#if isOwner}}
<form method="POST" action="/questions/{{question._id}}?_method=DELETE">
    <button type="submit">Delete Question</button>
</form>
<a href="/questions/{{question._id}}/edit">Edit</a>
{{/if}}

{{#if session.userId}}
<br><br>
Napiši komentar:
<form action="/comments/{{question._id}}" method="post">
    <textarea name="content" placeholder="Your question (supports **bold**, _italics_, etc.)" required></textarea>
    <small>Supports Markdown: **bold**, _italic_, `code`, lists.</small>
    <button type="submit">Submit</button>
</form>
{{/if}}

<br><br>
<ul>
    {{#each comments}}
    <li id="comment-{{this._id}}">
        <img src="{{this.profilePicture}}" alt="Profile Picture" width="50">
        <p>{{{this.author.username}}}</p>
        <p>{{formatDate this.createdAt}}</p>
        <p>{{{this.content}}}</p>

        <!-- Voting buttons -->
        <div class="voting-container" style="display: flex; align-items: center; gap: 5px; margin: 10px 0;">
            {{#if ../session.userId}}
            <button class="vote-btn {{#if (eq this.userVote 1)}}voted-up{{/if}}" data-comment-id="{{this._id}}"
                data-user-id="{{../session.userId}}" data-vote-type="upvote" style="color: green;">
                ↑
            </button>

            <span class="vote-score" id="score-{{this._id}}"
                style="font-weight: bold; min-width: 20px; text-align: center;">
                {{this.score}}
            </span>

            <button class="vote-btn {{#if (eq this.userVote -1)}}voted-down{{/if}}" data-comment-id="{{this._id}}"
                data-user-id="{{../session.userId}}" data-vote-type="downvote" style="color: red;">
                ↓
            </button>
            {{else}}
            <button disabled>↑</button>
            <span style="font-weight: bold; min-width: 20px; text-align: center;">
                {{this.score}}
            </span>
            <button disabled>↓</button>
            {{/if}}
        </div>

        <!-- Show acceptance status -->
        {{#if this.isAccepted}}
        <p style="color: green;">✓ Accepted Answer</p>
        {{/if}}

        <!-- Accept Answer Button (only shown to question owner) -->
        {{#if ../isOwner}}
        <form method="POST" action="/questions/{{../question._id}}/accept/{{this._id}}?_method=PUT">
            <button type="submit" {{#if this.isAccepted}}disabled style="background-color: #4CAF50;" {{/if}}>
                {{#if this.isAccepted}}✓ Accepted{{else}}Accept Answer{{/if}}
            </button>
        </form>
        {{/if}}

        <!-- Edit/Delete Buttons (only shown to comment owner) -->
        {{#if this.isCommentOwner}}
        <button class="delete-btn" data-comment-id="{{this._id}}">Delete Comment</button><br>
        <a href="/comments/{{this._id}}/edit">Edit</a>
        {{/if}}

        <br>
        <!-- Sub-comment form -->
        {{#if ../session.userId}}
        <div style="margin-top: 10px; padding-left: 20px;">
            <form action="/subComments/{{this._id}}/{{../question._id}}" method="post">
                <textarea name="content" placeholder="Write a reply..." rows="2" required style="width: 90%;"></textarea>
                <br>
                <button type="submit" style="margin-top: 5px;">Reply</button>
            </form>
        </div>
        {{/if}}

        {{#each this.subComments}}
            <div style="margin-left: 30px; padding: 5px; border-left: 2px solid #ccc;">
                <img src="{{this.author.profilePicture}}" alt="Profile Picture" width="30">
                <strong>{{this.author.username}}</strong>
                <p>{{formatDate this.createdAt}}</p>
                <p>{{{this.content}}}</p>
            </div>
        {{/each}}

        <br><br>
    </li>
    {{/each}}
</ul>


<script src="/javascripts/voting.js"></script>
<script src="/javascripts/deleteComment.js"></script>