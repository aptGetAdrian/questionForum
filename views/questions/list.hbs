<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">All Questions</h1>
    <a href="/questions/new"
      class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">Ask New Question</a>
  </div>
  <ul class="space-y-4">
    {{#each questions}}
      <li>
        <a href="/questions/{{this._id}}" class="text-lg font-medium hover:text-indigo-600">{{this.title}}</a>
      </li>
    {{/each}}
  </ul>
</div>